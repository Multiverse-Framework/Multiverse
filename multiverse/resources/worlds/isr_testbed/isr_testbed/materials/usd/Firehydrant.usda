#usda 1.0
(
    defaultPrim = "Firehydrant"
    upAxis = "Z"
)

def Material "Firehydrant"
{
    token inputs:frame:stPrimvarName = "st"
    token outputs:surface.connect = </Firehydrant/PBRShader.outputs:surface>

    def Shader "PBRShader"
    {
        uniform token info:id = "UsdPreviewSurface"
        color3f inputs:diffuseColor.connect = </Firehydrant/DiffuseTexture.outputs:rgb>
        color3f inputs:emissiveColor = (0, 0, 0)
        float inputs:opacity = 1
        int inputs:useSpecularWorkflow = 1
        token outputs:surface
    }

    def Shader "PrimvarReader"
    {
        uniform token info:id = "UsdPrimvarReader_float2"
        token inputs:varname.connect = </Firehydrant.inputs:frame:stPrimvarName>
        float2 outputs:result
    }

    def Shader "DiffuseTexture"
    {
        uniform token info:id = "UsdUVTexture"
        asset inputs:file = @../../textures/fire_hydrant_diffuse.png@
        float2 inputs:st.connect = </Firehydrant/PrimvarReader.outputs:result>
        float3 outputs:rgb
    }
}

